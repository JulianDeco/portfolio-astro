---
import ExperienceItem from "./ExperienceItem.astro";
const EXPERIENCES = [
    {
        date:'Enero 2022 - Actualidad',
        title:"Desarrollo de servicios web",
        description: "Responsable del desarrollo y puesta en producción de los distintos servicios que sean requeridos con diversas tecnologías como FastApi(python) en conjunto con MySql y Oracle.",
        link: '#',
    },
    {
        date:'Agosto 2023 - Diciembre 2023',
        title:"Desarrollo de backend para página web institucional",
        description: "Responsable del backend para inicio de sesión de administradores, alta, baja y modificación de noticias y demás enlaces a páginas externas.",
        link: 'https://izo-gw.estiloinformatica.com.ar:8082/docs',
    },
]
---

<ol class="relative border-s border-gray-200 dark:border-gray-700 ml-3">                             
        {EXPERIENCES.map((e) => 
        <li class="mb-10 ms-4">  
            <ExperienceItem title={e.title} description={e.description} date={e.date} link={e.link} />
        <li/>
        )}
</ol>

